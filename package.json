{
  "name": "lispbm-language-support",
  "displayName": "lispBM language support",
  "description": "Adds support for the lispBM language. Don't put to much faith into this project.",
  "publisher": "rasmus-soderhielm",
  "version": "0.4.0",
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "icon": "images/icon.png",
  "contributes": {
    "languages": [
      {
        "id": "lispbm",
        "aliases": [
          "LispBM",
          "lispbm"
        ],
        "extensions": [
          ".lbm",
          ".lisp"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "images/icon.png",
          "dark": "images/icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "lispbm",
        "scopeName": "source.lispbm",
        "path": "./syntaxes/lispbm.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "lispBM",
      "properties": {
        "lispbm.format.stackClosingBrackets": {
          "type": "boolean",
          "default": true,
          "description": "Stack closing brackets on the same line as preceding code."
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/laxsjo/lispbm-language-support.git"
  },
  "main": "./extension.js",
  "activationEvents": [
    "onLanguage:lispbm"
  ],
  "scripts": {
    "prepackage": "node -e \"require('fs').mkdirSync('dist', { recursive: true });\"",
    "package": "node ./scripts/package-extension.js"
  },
  "devDependencies": {
    "@vscode/vsce": "^3.0.0"
  }
}
